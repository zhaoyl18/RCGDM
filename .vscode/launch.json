{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--pretrained_model_name_or_path", "runwayml/stable-diffusion-v1-5",
                "--train_data_dir", "./sub_data/train",
                "--use_ema",
                "--resolution", "512",
                "--center_crop",
                "--random_flip",
                "--train_batch_size", "16",
                "--gradient_accumulation_steps", "4",
                "--gradient_checkpointing",
                "--num_train_epochs", "50",
                "--checkpointing_steps", "100",
                "--learning_rate", "1e-05",
                "--validation_epochs", "1",
                "--validation_prompts",
                "cat", "dog", "horse", "monkey", "rabbit", "butterfly", "peacock", "panda",
                "--max_grad_norm", "1",
                "--lr_scheduler", "constant",
                "--lr_warmup_steps", "0",
                "--output_dir", "output/ema_debug",
                "--max_train_samples", "32",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        }
    ]
}
